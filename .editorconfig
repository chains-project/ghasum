# Configuration file for EditorConfig (https://editorconfig.org)

root=true

[*]
charset=utf-8
insert_final_newline=true
max_line_length=80
trim_trailing_whitespace=true

[Containerfile*]
indent_style=tab

[LICENSE]
indent_size=unset
indent_style=space

[*.go]
indent_style=tab

[*.md]
indent_size=unset
indent_style=space

[*.txtar]
indent_size=unset
indent_style=unset

[*.yml]
indent_size=2
indent_style=space
