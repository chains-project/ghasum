! stdout 'Ok'
stderr 'an unexpected error occurred'
stderr 'job "not-found" not found in workflow ".github/workflows/workflow.yml"'

# Offline cache entry missing
! exec ghasum verify -cache .cache/ -offline not-cached/
! stdout 'Ok'
