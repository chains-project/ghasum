{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "ci/cd"
      ],
      "schedule": "* 1-3 * * 1-5",
      "prConcurrentLimit": 1
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "schedule": "* 1-3 * * 1-5",
      "prConcurrentLimit": 1
    }
  ]
}
